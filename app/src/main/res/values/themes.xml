<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.2FFamilyFriends" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="color">#293BC1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/color</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TabCustomFont" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/josefin_sans_bold</item>
    </style>
    <style name="NoTileBar" parent="Theme.MaterialComponents">
        <item name="statusBarForeground">#00FFFFFF</item>
    </style>
</resources>